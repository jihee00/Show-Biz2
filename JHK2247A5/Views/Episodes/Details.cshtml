@model JHK2247A5.Models.EpisodeWithShowNameViewModel

@{
    ViewBag.Title = "Episode Details";
}

<h2>@Html.DisplayFor(model => model.Name)</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Show.Name)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Show.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SeasonNumber)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SeasonNumber)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EpisodeNumber)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EpisodeNumber)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AirDate)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AirDate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>

        <dd class="col-sm-10">
            @*@Html.DisplayFor(model => model.ImageUrl)*@
            <img src="@Model.ImageUrl" style="max-width: 150px; max-height: 150px;" />
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Clerk)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Clerk)
        </dd>
    </dl>
    @if (!string.IsNullOrWhiteSpace(Model.Premise))
    {
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Premise)
            </dt>

            <dd class="col-sm-10 well bg-light rounded border">
                <div class="panel panel-default panel-body">
                    @Html.Raw(Model.Premise)
                </div>
            </dd>
        </dl>
    }

    @if (!string.IsNullOrWhiteSpace(Model.VideoContentType))
    {
        <hr />
        <video controls width="640" height="360">
            <source src="@Url.Action("VideoDetails", "Episodes", new { id = Model.Id })" type="@Model.VideoContentType">
            Your browser does not support the video tag.
        </video>
    }
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
